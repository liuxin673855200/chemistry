/* components/course-center/course-center.wxss */
@import "../../assets/css/main.wxss";
@import "../../assets/css/liux.wxss";
.course-top{
  width: 100%;
  height:180rpx;
  overflow: hidden;
  position: fixed;
  top:0;
}
.course-top>.search{
  width: 90%;
  height: 60rpx;
  margin:50rpx auto 20rpx;
}
.search>input{
  width: 460rpx;
  height: 100%;
  float: left;
  background:#fff;
  border-radius: 5rpx;
  color:#000;
}
.search>button{
    width:160rpx;
    margin-left:20rpx;
    height: 60rpx;
    float:left;
    line-height: 60rpx;
    font-size: 32rpx;
}
.innerSearch{
  font-size: 30rpx;
  color: #ccc;
}
.list{
  margin-top:180rpx;
  padding: 20rpx;
}
.list>.list-item{
  width: 100%;
  /* height: 140rpx; */
  background-color: #fff;

  margin-bottom: 20rpx;
}
.list-item>.item-main{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
    border:1px solid #ccc;
}
.item-main .main-img{
  width: 140rpx;
  height: 140rpx;
}
.item-main  .title{
  font-size: 40rpx;
  color:#000;
  width: 440rpx;
  text-align: center;
  line-height: 70rpx;
}
.item-main  .arrow{
  width: 40rpx;
  height: 40rpx;
  margin:40rpx 40rpx 0 0;
}
.child-list .child-item{
  width: 600rpx;
  margin-left:100rpx;
  height:80rpx;
  line-height: 80rpx;
}